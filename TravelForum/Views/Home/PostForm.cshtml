
<div class="container">
  <body id="post-form">
      <form class="form-horizontal" action="/form/summary" method="post" class="form-group">
      <legend><h1>Create a new post</h1></legend>
        <div class="form-group">
          <label class="col-lg-2 control-label" for="title">Title:</label>
          <div class="col-lg-10">
            <input type="text" class="form-control" name="title"  required>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-2 control-label" for="name">Your name:</label>
          <div class="col-lg-10">
            <input type="text" class="form-control" name="name" required>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-2 control-label" for="start-date">Travel start date:</label>
          <div class="col-lg-10">
            <input type="date" class="form-control" name="start-date"  required>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-2 control-label" for="end-date">Travel end date:</label>
          <div class="col-lg-10">
            <input type="date" class="form-control" name="end-date" required>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-2 control-label" for="text">Text:</label>
          <div class="col-lg-10">
            <textarea rows="5" class="form-control" name="text"  required></textarea>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-2 control-label" for="region">Region:</label>
          <div class="col-lg-3">
            <select class="selectpicker form-control" name="region">
              @foreach(var region in Model["regions"])
              {
                <option value="@region.GetId()">@region.GetName()</option>
              }
            </select>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-2 control-label" for="country">Country:</label>
          <div class="col-lg-3">
            <select class="selectpicker form-control" name="country">
              @foreach(var country in Model["countries"])
              {
                <option value="@country.GetId()">@country.GetName()</option>
              }
            </select>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-2 control-label" for="city">City:</label>
          <div class="col-lg-3">
            <select class="selectpicker form-control" name="city">
              @foreach(var city in Model["cities"])
              {
                <option value="@city.GetId()">@city.GetName()</option>
              }
            </select>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-2 control-label" for="tag">Tag:</label>
          <div class="col-lg-3">
            <select class="selectpicker form-control" name="tag">
              @foreach(var tag in Model["tags"])
              {
                <option value="@tag.GetId()">@tag.GetName()</option>
              }
            </select>
          </div>
        </div>

        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <button type="submit" class="btn btn-success">Confirm Post</button>
            <a href='/' class="btn btn-info"> Cancel</a>
            <button type="reset" class="btn btn-danger">Reset</button>
          </div>
        </div>
      </form>
  </body>
</div>
