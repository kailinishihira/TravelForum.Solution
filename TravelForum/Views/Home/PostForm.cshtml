<body id="post-form">
  <h1>Create a new post</h1>

  <form action="/form/summary" method="post" class="form-group">
    <label for="title">Title:</label>
    <input type="text" class="form-control" name="title" required>
    <label for="name">Your name:</label>
    <input type="text" class="form-control" name="name" required>
    <label for="start-date">Travel start date:</label>
    <input type="date" class="form-control" name="start-date" required>
    <label for="end-date">Travel end date:</label>
    <input type="date" class="form-control" name="end-date" required>
    <label for="text">Text:</label>
    <div class="form-group">
      <textarea rows="15" cols="150" name="text" placeholder="Share your experience...">

      </textarea>
    </div>
    @* <input type="text" class="form-control" name="text" required> *@

    <label for="region">Region:</label>
    <select class="selectpicker" name="region">
      @foreach(var region in Model["regions"])
      {
          <option value="@region.GetId()">@region.GetName()</option>
      }
    </select>

    <label for="country">Country:</label>
    <select class="selectpicker" name="country">
      @foreach(var country in Model["countries"])
      {
          <option value="@country.GetId()">@country.GetName()</option>
      }
    </select>

    <label for="city">City:</label>
    <select class="selectpicker" name="city">
      @foreach(var city in Model["cities"])
      {
          <option value="@city.GetId()">@city.GetName()</option>
      }
    </select>

    <label for="tag">Tag:</label>
    <select class="selectpicker" name="tag">
      @foreach(var tag in Model["tags"])
      {
          <option value="@tag.GetId()">@tag.GetName()</option>
      }
    </select>
    <button type="submit" class="btn btn-success">Confirm Post</button>
    <a href='/' class="btn btn-info"> Cancel</a>
  </form>

</body>
